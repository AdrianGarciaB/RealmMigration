<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".view.NuevaTareaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textview_tareatitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir tarea"
            android:layout_gravity="center"
            android:textSize="28sp"/>

        <EditText
            android:id="@+id/edittext_descripcion"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:hint="Descripción" />

        <EditText
            android:id="@+id/edittext_prioridad"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="Prioridad" />


        <Button
            android:id="@+id/button_crearTarea"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:text="Añadir" />

    </LinearLayout>

</FrameLayout>